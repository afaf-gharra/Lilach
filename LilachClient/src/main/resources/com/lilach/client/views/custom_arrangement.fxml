<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox xmlns="http://javafx.com/javafx/17" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.lilach.client.controllers.CustomArrangementController"
      spacing="0" 
      styleClass="bg-floral-pattern"
      prefWidth="1600" 
      prefHeight="900"
      stylesheets="@/com/lilach/client/css/styles.css">
    
    <!-- Navigation Bar -->
    <HBox alignment="CENTER_LEFT" spacing="0" styleClass="navbar">
        <HBox alignment="CENTER_LEFT" spacing="5" styleClass="navbar-brand">
            <FontIcon iconLiteral="fas-leaf" iconSize="24" iconColor="white"/>
            <Label text="Lilach Flower Shop" styleClass="navbar-title"/>
        </HBox>
        
        <Region HBox.hgrow="ALWAYS"/>
        
        <HBox spacing="5" styleClass="navbar-menu">
            <Button text="Home" onAction="#navigateToCatalog" styleClass="nav-button">
                <graphic>
                    <FontIcon iconLiteral="fas-home" iconSize="16"/>
                </graphic>
            </Button>
            <Button text="Profile" onAction="#handleProfile" styleClass="nav-button">
                <graphic>
                    <FontIcon iconLiteral="fas-user" iconSize="16"/>
                </graphic>
            </Button>
            <Button text="Cart" onAction="#handleViewCart" styleClass="nav-button">
                <graphic>
                    <FontIcon iconLiteral="fas-shopping-cart" iconSize="16"/>
                </graphic>
            </Button>
            <Button text="My Orders" onAction="#handleViewOrders" styleClass="nav-button">
                <graphic>
                    <FontIcon iconLiteral="fas-clipboard-list" iconSize="16"/>
                </graphic>
            </Button>
            <Button text="Complaints" onAction="#handleComplaints" styleClass="nav-button">
                <graphic>
                    <FontIcon iconLiteral="fas-comments" iconSize="16"/>
                </graphic>
            </Button>
            <Separator orientation="VERTICAL" styleClass="nav-separator"/>
            <Label fx:id="welcomeLabel" styleClass="navbar-welcome"/>
            <Button text="Logout" onAction="#handleLogout" styleClass="nav-button-logout">
                <graphic>
                    <FontIcon iconLiteral="fas-sign-out-alt" iconSize="16"/>
                </graphic>
            </Button>
        </HBox>
    </HBox>

    <!-- Content Container -->
    <VBox alignment="CENTER" spacing="20" VBox.vgrow="ALWAYS" styleClass="content-section">
        <!-- Page Title -->
        <Label text="Create Custom Arrangement" styleClass="h1 text-primary"/>
        
        <!-- Custom Arrangement Form -->
        <VBox styleClass="card-container" spacing="20" prefWidth="700">
            <Label text="Design Your Custom Flower Arrangement" styleClass="h2 text-dark"/>
        
        <GridPane hgap="15" vgap="15">
            <columnConstraints>
                <ColumnConstraints prefWidth="150"/>
                <ColumnConstraints prefWidth="400"/>
            </columnConstraints>
            
            <!-- Arrangement Type -->
            <Label text="Arrangement Type *" styleClass="input-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="typeCombo" styleClass="modern-input" GridPane.rowIndex="0" GridPane.columnIndex="1">
                <placeholder>
                    <Label text="Select arrangement type"/>
                </placeholder>
            </ComboBox>
            
            <!-- Flower Types -->
            <Label text="Flower Types *" styleClass="input-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextArea fx:id="flowerTypesField" promptText="e.g., Roses, Lilies, Tulips (separate with commas)" 
                      styleClass="modern-input" prefRowCount="3"
                      GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            
            <!-- Color Scheme -->
            <Label text="Color Scheme *" styleClass="input-label" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="colorCombo" styleClass="modern-input" GridPane.rowIndex="2" GridPane.columnIndex="1">
                <placeholder>
                    <Label text="Select color scheme"/>
                </placeholder>
            </ComboBox>
            
            <!-- Price Range -->
            <Label text="Price Range *" styleClass="input-label" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <ComboBox fx:id="priceCombo" styleClass="modern-input" GridPane.rowIndex="3" GridPane.columnIndex="1">
                <placeholder>
                    <Label text="Select price range"/>
                </placeholder>
            </ComboBox>
            
            <!-- Special Requests -->
            <Label text="Special Requests" styleClass="input-label" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextArea fx:id="specialRequests" promptText="Any special instructions or requests (optional)" 
                      styleClass="modern-input" prefRowCount="3"
                      GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        </GridPane>
        
        <!-- Action Buttons -->
        <HBox spacing="20" alignment="CENTER">
            <Button text="Cancel" onAction="#handleCancel" styleClass="secondary-button">
                <graphic>
                    <FontIcon iconLiteral="fas-times" iconSize="14"/>
                </graphic>
            </Button>
            <Button text="Add to Cart" onAction="#handleAddToCart" styleClass="primary-button">
                <graphic>
                    <FontIcon iconLiteral="fas-cart-plus" iconSize="14"/>
                </graphic>
            </Button>
        </HBox>
    </VBox>
    </VBox>
    
    <!-- Footer -->
    <Label text="Â© 2025 Lilach Flower Shop" styleClass="copyright"/>
</VBox>
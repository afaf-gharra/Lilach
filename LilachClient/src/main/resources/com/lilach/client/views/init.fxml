<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.lilach.client.controllers.InitController"
      spacing="15" alignment="CENTER"
      style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets top="40.0" right="40.0" bottom="40.0" left="40.0"/>
    </padding>

    <Label text="Lilach Flower Shop" style="-fx-text-fill: #8B4789;">
        <font>
            <Font name="System Bold" size="28.0"/>
        </font>
    </Label>
    
    <Label text="Server Connection" style="-fx-text-fill: #666666;">
        <font>
            <Font size="16.0"/>
        </font>
        <VBox.margin>
            <Insets bottom="20.0"/>
        </VBox.margin>
    </Label>

    <Label text="Enter Server IP Address:" style="-fx-text-fill: #333333;"/>
    <TextField fx:id="ipField" promptText="e.g., 192.168.1.100 or localhost" 
               style="-fx-pref-width: 300; -fx-font-size: 14px;"/>

    <Label text="Enter Server Port:" style="-fx-text-fill: #333333;">
        <VBox.margin>
            <Insets top="10.0"/>
        </VBox.margin>
    </Label>
    <TextField fx:id="portField" promptText="e.g., 8080" 
               style="-fx-pref-width: 300; -fx-font-size: 14px;"/>

    <Button text="Connect to Server" onAction="#connect" 
            style="-fx-background-color: #8B4789; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 30 10 30; -fx-cursor: hand;">
        <VBox.margin>
            <Insets top="30.0"/>
        </VBox.margin>
    </Button>

</VBox>

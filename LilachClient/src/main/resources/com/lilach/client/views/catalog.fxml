<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox xmlns="http://javafx.com/javafx/17" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.lilach.client.controllers.CatalogController"
      spacing="20" 
      alignment="CENTER"
      styleClass="bg-floral-pattern"
      prefWidth="1600" 
      prefHeight="900"
      stylesheets="@/com/lilach/client/css/styles.css">
    
    <!-- Navigation Bar -->
    <HBox alignment="CENTER_LEFT" spacing="0" styleClass="navbar">
        <HBox alignment="CENTER_LEFT" spacing="5" styleClass="navbar-brand">
            <FontIcon iconLiteral="fas-leaf" iconSize="24" iconColor="white"/>
            <Label text="Lilach Flower Shop" styleClass="navbar-title"/>
        </HBox>
        
        <Region HBox.hgrow="ALWAYS"/>
        
        <HBox spacing="5" styleClass="navbar-menu">
            <Button text="Home" onAction="#navigateToCatalog" styleClass="nav-button nav-active">
                <graphic>
                    <FontIcon iconLiteral="fas-home" iconSize="16"/>
                </graphic>
            </Button>
            <Button text="Cart" onAction="#handleViewCart" styleClass="nav-button">
                <graphic>
                    <FontIcon iconLiteral="fas-shopping-cart" iconSize="16"/>
                </graphic>
            </Button>
            <Button text="My Orders" onAction="#handleViewOrders" styleClass="nav-button">
                <graphic>
                    <FontIcon iconLiteral="fas-clipboard-list" iconSize="16"/>
                </graphic>
            </Button>
            <Button text="Complaints" onAction="#handleComplaints" styleClass="nav-button">
                <graphic>
                    <FontIcon iconLiteral="fas-comments" iconSize="16"/>
                </graphic>
            </Button>
            <Separator orientation="VERTICAL" styleClass="nav-separator"/>
            <Label fx:id="welcomeLabel" styleClass="navbar-welcome"/>
            <Button text="Logout" onAction="#handleLogout" styleClass="nav-button-logout">
                <graphic>
                    <FontIcon iconLiteral="fas-sign-out-alt" iconSize="16"/>
                </graphic>
            </Button>
        </HBox>
    </HBox>
    
    <!-- Search and Filter Section -->
    <VBox spacing="20" alignment="CENTER" styleClass="content-section">
    <HBox spacing="20" alignment="CENTER" styleClass="filter-section">
        <ComboBox fx:id="categoryComboBox" promptText="Select Category" styleClass="modern-input" prefWidth="200"/>
        
        <TextField fx:id="searchField" promptText="Search products..." styleClass="modern-input" prefWidth="300"/>
        <Button fx:id="searchButton" text="Search" onAction="#filterProducts" styleClass="primary-button">
            <graphic>
                <FontIcon iconLiteral="fas-search" iconSize="14"/>
            </graphic>
        </Button>
        
        <Button fx:id="customArrangementButton" onAction="#handleCreateCustomArrangement" text="Create Custom Arrangement" styleClass="accent-button">
            <graphic>
                <FontIcon iconLiteral="fas-plus-circle" iconSize="14"/>
            </graphic>
        </Button>
    </HBox>
    
    <!-- Products Grid -->
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="transparent-scroll" VBox.vgrow="ALWAYS">
        <FlowPane fx:id="productsContainer" 
                  hgap="20" 
                  vgap="20" 
                  prefWrapLength="1100"
                  alignment="CENTER"/>
    </ScrollPane>
    </VBox>
    
    <!-- Footer -->
    <Label text="Â© 2025 Lilach Flower Shop" styleClass="copyright"/>


</VBox>
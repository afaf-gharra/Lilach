<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox xmlns="http://javafx.com/javafx/17" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.lilach.client.controllers.CatalogController"
      spacing="20" 
      alignment="CENTER"
      styleClass="bg-floral-pattern"
      prefWidth="1200" 
      prefHeight="800"
      stylesheets="@/com/lilach/client/css/styles.css">
    
    <!-- Header -->
    <HBox alignment="CENTER" spacing="20" styleClass="header-section">
        <Label fx:id="welcomeLabel" styleClass="h1 text-white"/>
        <HBox spacing="10">
            <Button fx:id="viewCartButton" onAction="#handleViewCart" text="View Cart" styleClass="primary-button">
                <graphic>
                    <FontIcon iconLiteral="fas-shopping-cart" iconSize="14"/>
                </graphic>
            </Button>
            <Button fx:id="viewOrdersButton" onAction="#handleViewOrders" text="My Orders" styleClass="secondary-button">
                <graphic>
                    <FontIcon iconLiteral="fas-clipboard-list" iconSize="14"/>
                </graphic>
            </Button>
        </HBox>
    </HBox>
    
    <!-- Search and Filter Section -->
    <HBox spacing="20" alignment="CENTER" styleClass="filter-section">
        <ComboBox fx:id="categoryComboBox" promptText="Select Category" styleClass="modern-input" prefWidth="200"/>
        
        <TextField fx:id="searchField" promptText="Search products..." styleClass="modern-input" prefWidth="300"/>
        <Button fx:id="searchButton" text="Search" styleClass="primary-button">
            <graphic>
                <FontIcon iconLiteral="fas-search" iconSize="14"/>
            </graphic>
        </Button>
        
        <Button fx:id="customArrangementButton" text="Create Custom Arrangement" styleClass="accent-button">
            <graphic>
                <FontIcon iconLiteral="fas-plus-circle" iconSize="14"/>
            </graphic>
        </Button>
    </HBox>
    
    <!-- Products Grid -->
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="transparent-scroll">
        <FlowPane fx:id="productsContainer" 
                  hgap="20" 
                  vgap="20" 
                  prefWrapLength="1100"
                  alignment="CENTER"/>
    </ScrollPane>
    
    <!-- Footer -->
    <Button text="Logout" onAction="#handleLogout" styleClass="text-button"/>
</VBox>
<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.lilach.client.controllers.OrderHistoryController"
      spacing="20" 
      alignment="CENTER"
      styleClass="bg-primary"
      prefWidth="1200" 
      prefHeight="800"
      stylesheets="@/com/lilach/client/css/styles.css">
    
     <HBox alignment="CENTER" spacing="20">
        <Label fx:id="welcomeLabel" styleClass="h1 text-white"/>
        <HBox spacing="10">
            <Button fx:id="viewCartButton" onAction="#handleViewCart" text="View Cart" styleClass="btn btn-info"/>
            <Button fx:id="viewOrdersButton" onAction="#handleViewOrders" text="My Orders" styleClass="btn btn-warning"/>
        </HBox>
    </HBox>

    <Label text="Your Order History" styleClass="h1 text-white"/>
    
    <HBox spacing="20" alignment="CENTER">
        <VBox styleClass="card p-4" spacing="10" prefWidth="800">
            <Label text="Your Orders" styleClass="h2"/>
            <TableView fx:id="ordersTable" prefHeight="500"/>        
        </VBox>
    </HBox>
    
    <!-- Added container for bottom buttons with proper styling -->
    <VBox alignment="CENTER" spacing="10">
        <Button text="Back to Catalog" onAction="#navigateToCatalog" styleClass="btn btn-info" />
        <Label text="Â© 2025 Lilach Flower Shop" styleClass="text-white"/>
    </VBox>
</VBox>
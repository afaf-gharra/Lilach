<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox xmlns="http://javafx.com/javafx/17" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.lilach.client.controllers.CheckoutController"
      spacing="20" 
      alignment="CENTER"
      styleClass="bg-floral-pattern"
      prefWidth="1600" 
      prefHeight="900"
      stylesheets="@/com/lilach/client/css/styles.css">
    
    <!-- Header -->
    <HBox alignment="CENTER" spacing="20" styleClass="header-section">
        <Label fx:id="welcomeLabel" styleClass="h1 text-white"/>
        <HBox spacing="10">
            <Button fx:id="viewCartButton" onAction="#handleViewCart" text="View Cart" styleClass="primary-button">
                <graphic>
                    <FontIcon iconLiteral="fas-shopping-cart" iconSize="14"/>
                </graphic>
            </Button>
            <Button fx:id="viewOrdersButton" onAction="#handleViewOrders" text="My Orders" styleClass="primary-button">
                <graphic>
                    <FontIcon iconLiteral="fas-clipboard-list" iconSize="14"/>
                </graphic>
            </Button>
        </HBox>
    </HBox>

    <!-- Page Title -->
    <Label text="Checkout" styleClass="h1 text-primary"/>
    
    <!-- Checkout Content -->
    <HBox alignment="TOP_CENTER" spacing="40">
        <!-- Delivery Information -->
        <VBox styleClass="card-container" spacing="15" prefWidth="450">
            <Label text="Delivery Information" styleClass="h2 text-dark"/>
            
            <VBox spacing="5">
                <Label text="Delivery Date" styleClass="input-label"/>
                <DatePicker fx:id="deliveryDatePicker" promptText="Select delivery date" styleClass="modern-input"/>
            </VBox>
            
            <VBox spacing="5">
                <Label text="Delivery Time (HH:mm)" styleClass="input-label"/>
                <TextField fx:id="deliveryTimeField" promptText="e.g., 14:30" styleClass="modern-input"/>
            </VBox>
            
            <VBox spacing="5">
                <Label text="Delivery Address" styleClass="input-label"/>
                <TextArea fx:id="deliveryAddress" promptText="Full delivery address" styleClass="modern-input" prefHeight="80"/>
            </VBox>
            
            <VBox spacing="5">
                <Label text="Recipient Name" styleClass="input-label"/>
                <TextField fx:id="recipientName" promptText="Recipient's full name" styleClass="modern-input"/>
            </VBox>
            
            <VBox spacing="5">
                <Label text="Recipient Phone" styleClass="input-label"/>
                <TextField fx:id="recipientPhone" promptText="Recipient's phone number" styleClass="modern-input"/>
            </VBox>
            
            <VBox spacing="5">
                <Label text="Greeting Message (Optional)" styleClass="input-label"/>
                <TextArea fx:id="greetingMessage" promptText="Your greeting message" styleClass="modern-input" prefHeight="80"/>
            </VBox>
        </VBox>
        
        <!-- Order Summary -->
        <VBox styleClass="card-container" spacing="15" prefWidth="450">
            <Label text="Order Summary" styleClass="h2 text-dark"/>
            
            <ListView fx:id="orderItems" prefHeight="200" styleClass="modern-list"/>
            
            <VBox spacing="10" styleClass="summary-section">
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Label text="Subtotal:" styleClass="h3 text-dark"/>
                    <Label fx:id="subtotalLabel" text="0.00" styleClass="h3 text-dark"/>
                </HBox>
                
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Label text="Delivery Fee:" styleClass="h3 text-dark"/>
                    <Label text="10.00" styleClass="h3 text-dark"/>
                </HBox>
                
                <HBox spacing="10" alignment="CENTER_RIGHT" styleClass="total-section">
                    <Label text="Total:" styleClass="h2 text-lilac"/>
                    <Label fx:id="totalLabel" text="0.00" styleClass="h2 text-lilac"/>
                </HBox>
            </VBox>
            
            <Button text="Place Order" onAction="#handlePlaceOrder" styleClass="primary-button" prefHeight="50">
                <graphic>
                    <FontIcon iconLiteral="fas-check-circle" iconSize="16"/>
                </graphic>
            </Button>
        </VBox>
    </HBox>
    
    <!-- Footer -->
    <Label text="Â© 2025 Lilach Flower Shop" styleClass="copyright"/>
</VBox>
<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox xmlns="http://javafx.com/javafx/17" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.lilach.client.controllers.CheckoutController"
      spacing="0" 
      styleClass="bg-floral-pattern"
      prefWidth="1600" 
      prefHeight="900"
      stylesheets="@/com/lilach/client/css/styles.css">
    
    <!-- Navigation Bar -->
    <HBox alignment="CENTER_LEFT" spacing="0" styleClass="navbar">
        <HBox alignment="CENTER_LEFT" spacing="5" styleClass="navbar-brand">
            <FontIcon iconLiteral="fas-leaf" iconSize="24" iconColor="white"/>
            <Label text="Lilach Flower Shop" styleClass="navbar-title"/>
        </HBox>
        
        <Region HBox.hgrow="ALWAYS"/>
        
        <HBox spacing="5" styleClass="navbar-menu">
            <Button text="Home" onAction="#navigateToCatalog" styleClass="nav-button">
                <graphic>
                    <FontIcon iconLiteral="fas-home" iconSize="16"/>
                </graphic>
            </Button>
            <Button text="Cart" onAction="#handleViewCart" styleClass="nav-button">
                <graphic>
                    <FontIcon iconLiteral="fas-shopping-cart" iconSize="16"/>
                </graphic>
            </Button>
            <Button text="My Orders" onAction="#handleViewOrders" styleClass="nav-button">
                <graphic>
                    <FontIcon iconLiteral="fas-clipboard-list" iconSize="16"/>
                </graphic>
            </Button>
            <Button text="Complaints" onAction="#handleComplaints" styleClass="nav-button">
                <graphic>
                    <FontIcon iconLiteral="fas-comments" iconSize="16"/>
                </graphic>
            </Button>
            <Separator orientation="VERTICAL" styleClass="nav-separator"/>
            <Label fx:id="welcomeLabel" styleClass="navbar-welcome"/>
            <Button text="Logout" onAction="#handleLogout" styleClass="nav-button-logout">
                <graphic>
                    <FontIcon iconLiteral="fas-sign-out-alt" iconSize="16"/>
                </graphic>
            </Button>
        </HBox>
    </HBox>
    
    <!-- Content Container -->
    <VBox alignment="CENTER" spacing="20" VBox.vgrow="ALWAYS" styleClass="content-section">
        <!-- Header -->
        <HBox alignment="CENTER" spacing="20" styleClass="header-section">
            <Label text="Checkout" styleClass="h1 text-primary"/>
        </HBox>
        
        <!-- Checkout Content -->
        <HBox alignment="TOP_CENTER" spacing="40">
        <!-- Left Panel - Delivery/Pickup & Information -->
        <VBox styleClass="card-container" spacing="20" prefWidth="500">
            <!-- Delivery/Pickup Selector -->
            <VBox spacing="15" styleClass="delivery-section">
                <Label text="Delivery Method" styleClass="h2 text-dark"/>
                
                <!-- Delivery/Pickup Toggle -->
                <HBox spacing="0" styleClass="delivery-toggle">
                    <ToggleButton text="Delivery ($10)" styleClass="toggle-left" selected="true"
                                 fx:id="deliveryToggle" onAction="#handleDeliveryToggle"/>
                    <ToggleButton text="Fast Delivery ($20)" styleClass="toggle-middle"
                                 fx:id="fastDeliveryToggle" onAction="#handleFastDeliveryToggle"/>
                    <ToggleButton text="Pickup (Free)" styleClass="toggle-right"
                                 fx:id="pickupToggle" onAction="#handlePickupToggle"/>
                </HBox>
                
                <!-- Delivery Information (Visible when delivery selected) -->
                <VBox fx:id="deliveryInfoSection" spacing="15" styleClass="delivery-info">
                    <Label text="Delivery Information" styleClass="h3 text-dark"/>
                    
                    <VBox spacing="5">
                        <Label text="Delivery Date *" styleClass="input-label"/>
                        <DatePicker fx:id="deliveryDatePicker" promptText="Select delivery date" styleClass="modern-input"/>
                        <Label fx:id="fastDeliveryTimeLabel" text="" styleClass="input-label" visible="false" managed="false"/>
                    </VBox>
                    
                    <VBox spacing="5">
                        <Label text="Delivery Time *" styleClass="input-label"/>
                        <HBox spacing="10">
                            <ComboBox fx:id="deliveryHourCombo" promptText="Hour" styleClass="modern-input" prefWidth="100"/>
                            <Label text=":" styleClass="h3 text-dark"/>
                            <ComboBox fx:id="deliveryMinuteCombo" promptText="Minute" styleClass="modern-input" prefWidth="100"/>
                        </HBox>
                    </VBox>
                    
                    <VBox spacing="5">
                        <Label text="Delivery Address *" styleClass="input-label"/>
                        <TextArea fx:id="deliveryAddress" promptText="Full delivery address" styleClass="modern-input" prefHeight="80"/>
                    </VBox>
                    
                    <VBox spacing="5">
                        <Label text="Recipient Name *" styleClass="input-label"/>
                        <TextField fx:id="recipientName" promptText="Recipient's full name" styleClass="modern-input"/>
                    </VBox>
                    
                    <VBox spacing="5">
                        <Label text="Recipient Phone *" styleClass="input-label"/>
                        <TextField fx:id="recipientPhone" promptText="Recipient's phone number" styleClass="modern-input"/>
                    </VBox>
                </VBox>
                
                <!-- Pickup Information (Hidden when delivery selected) -->
                <VBox fx:id="pickupInfoSection" spacing="15" styleClass="pickup-info" visible="false" managed="false">
                    <Label text="Pickup Information" styleClass="h3 text-dark"/>
                    
                    <VBox spacing="5">
                        <Label text="Pickup Store *" styleClass="input-label"/>
                        <ComboBox fx:id="pickupStoreCombo" styleClass="modern-input">
                            <placeholder>
                                <Label text="Select pickup location"/>
                            </placeholder>
                        </ComboBox>
                    </VBox>
                    
                    <VBox spacing="5">
                        <Label text="Pickup Date *" styleClass="input-label"/>
                        <DatePicker fx:id="pickupDatePicker" promptText="Select pickup date" styleClass="modern-input"/>
                    </VBox>
                    
                    <VBox spacing="5">
                        <Label text="Pickup Time *" styleClass="input-label"/>
                        <HBox spacing="10">
                            <ComboBox fx:id="pickupHourCombo" promptText="Hour" styleClass="modern-input" prefWidth="100"/>
                            <Label text=":" styleClass="h3 text-dark"/>
                            <ComboBox fx:id="pickupMinuteCombo" promptText="Minute" styleClass="modern-input" prefWidth="100"/>
                        </HBox>
                    </VBox>
                    
                    <VBox spacing="5">
                        <Label text="Pickup Person Name *" styleClass="input-label"/>
                        <TextField fx:id="pickupPersonField" promptText="Your full name" styleClass="modern-input"/>
                    </VBox>
                </VBox>
                
                <!-- Greeting Message (Common to both) -->
                <VBox spacing="5">
                    <Label text="Greeting Message (Optional)" styleClass="input-label"/>
                    <TextArea fx:id="greetingMessage" promptText="Your greeting message" styleClass="modern-input" prefHeight="60"/>
                </VBox>
            </VBox>
        </VBox>
        
        <!-- Right Panel - Order Summary -->
        <VBox styleClass="card-container" spacing="15" prefWidth="400">
            <Label text="Order Summary" styleClass="h2 text-dark"/>
            
            <ListView fx:id="orderItems" prefHeight="200" styleClass="modern-list"/>
            
            <VBox spacing="10" styleClass="summary-section">
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Label text="Subtotal:" styleClass="h3 text-dark"/>
                    <Label fx:id="subtotalLabel" text="0.00" styleClass="h3 text-dark"/>
                </HBox>
                
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Label text="Delivery Fee:" styleClass="h3 text-dark"/>
                    <Label fx:id="deliveryFeeLabel" text="10.00" styleClass="h3 text-dark"/>
                </HBox>
                
                <HBox spacing="10" alignment="CENTER_RIGHT" styleClass="total-section">
                    <Label text="Total:" styleClass="h2 text-lilac"/>
                    <Label fx:id="totalLabel" text="0.00" styleClass="h2 text-lilac"/>
                </HBox>
            </VBox>
            
            <Button text="Place Order" onAction="#handlePlaceOrder" styleClass="primary-button" prefHeight="50">
                <graphic>
                    <FontIcon iconLiteral="fas-check-circle" iconSize="16"/>
                </graphic>
            </Button>
        </VBox>
    </HBox>
    </VBox>
    
    <!-- Footer -->
    <Label text="Â© 2025 Lilach Flower Shop" styleClass="copyright"/>
</VBox>
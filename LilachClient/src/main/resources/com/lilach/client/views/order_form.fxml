<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.lilach.client.controllers.OrderController"
      spacing="20" 
      alignment="CENTER"
      styleClass="bg-primary"
      prefWidth="800" 
      prefHeight="700">
    
    <Label text="Place Your Order" styleClass="h1 text-white"/>
    
    <VBox styleClass="card p-4" spacing="20">
        <Label text="Delivery Information" styleClass="h2"/>
        
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints prefWidth="150"/>
                <ColumnConstraints prefWidth="250"/>
            </columnConstraints>
            
            <Label text="Delivery Date:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <DatePicker fx:id="deliveryDatePicker" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            
            <Label text="Delivery Time (HH:mm):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="deliveryTimeField" promptText="14:00" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            
            <Label text="Delivery Address:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextArea fx:id="deliveryAddressArea" promptText="Enter full address" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            
            <Label text="Recipient Name:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="recipientNameField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            
            <Label text="Recipient Phone:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="recipientPhoneField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            
            <Label text="Greeting Message:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextArea fx:id="greetingMessageArea" promptText="Optional greeting card message" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
        </GridPane>
        
        <Separator/>
        
        <Label text="Your Order" styleClass="h2"/>
        <VBox fx:id="cartItemsContainer" spacing="5" style="-fx-padding: 0 0 10 0;"/>
        <Label fx:id="totalPriceLabel" styleClass="h3"/>
        
        <Button fx:id="submitOrderButton" text="Place Order" onAction="#handleSubmitOrder" styleClass="btn btn-success"/>
    </VBox>
    
    <Label text="Â© 2025 Lilach Flower Shop" styleClass="text-white"/>
</VBox>
<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox xmlns="http://javafx.com/javafx/17" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.lilach.client.controllers.ComplaintController"
      spacing="0"
      styleClass="bg-floral-pattern"
      prefWidth="1600" 
      prefHeight="900"
      stylesheets="@/com/lilach/client/css/styles.css">
    
    <!-- Navigation Bar -->
    <HBox alignment="CENTER_LEFT" spacing="0" styleClass="navbar">
        <HBox alignment="CENTER_LEFT" spacing="5" styleClass="navbar-brand">
            <FontIcon iconLiteral="fas-leaf" iconSize="24" iconColor="white"/>
            <Label text="Lilach Flower Shop" styleClass="navbar-title"/>
        </HBox>
        
        <Region HBox.hgrow="ALWAYS"/>
        
        <HBox spacing="5" styleClass="navbar-menu">
            <Button text="Home" onAction="#navigateToCatalog" styleClass="nav-button">
                <graphic>
                    <FontIcon iconLiteral="fas-home" iconSize="16"/>
                </graphic>
            </Button>
            <Button text="Cart" onAction="#handleViewCart" styleClass="nav-button">
                <graphic>
                    <FontIcon iconLiteral="fas-shopping-cart" iconSize="16"/>
                </graphic>
            </Button>
            <Button text="My Orders" onAction="#handleViewOrders" styleClass="nav-button">
                <graphic>
                    <FontIcon iconLiteral="fas-clipboard-list" iconSize="16"/>
                </graphic>
            </Button>
            <Button text="Complaints" styleClass="nav-button nav-active">
                <graphic>
                    <FontIcon iconLiteral="fas-comments" iconSize="16"/>
                </graphic>
            </Button>
            <Separator orientation="VERTICAL" styleClass="nav-separator"/>
            <Label fx:id="welcomeLabel" styleClass="navbar-welcome"/>
            <Button text="Logout" onAction="#handleLogout" styleClass="nav-button-logout">
                <graphic>
                    <FontIcon iconLiteral="fas-sign-out-alt" iconSize="16"/>
                </graphic>
            </Button>
        </HBox>
    </HBox>
    
    <!-- Content Container -->
    <VBox alignment="CENTER" spacing="20" VBox.vgrow="ALWAYS" styleClass="content-section">
        <!-- Header -->
        <HBox alignment="CENTER" spacing="20" styleClass="header-section">
            <Label text="Submit Complaint" styleClass="h1 text-primary"/>
        </HBox>
        
        <!-- Complaint Form -->
        <VBox styleClass="card-container" spacing="20" prefWidth="650">
            <Label text="We're sorry to hear you're not satisfied. Please tell us about your issue." 
                   styleClass="h2 text-dark" wrapText="true" textAlignment="CENTER"/>
        
        <GridPane hgap="15" vgap="15">
            <columnConstraints>
                <ColumnConstraints prefWidth="150"/>
                <ColumnConstraints prefWidth="400"/>
            </columnConstraints>
            
            <!-- Order Number -->
            <Label text="Order Number *" styleClass="input-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="orderCombo" styleClass="modern-input" GridPane.rowIndex="0" GridPane.columnIndex="1">
                <placeholder>
                    <Label text="Select your order"/>
                </placeholder>
            </ComboBox>
            
            <!-- Complaint Type -->
            <Label text="Complaint Type *" styleClass="input-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <ComboBox fx:id="complaintTypeCombo" styleClass="modern-input" GridPane.rowIndex="1" GridPane.columnIndex="1">
                <placeholder>
                    <Label text="Select complaint type"/>
                </placeholder>
            </ComboBox>
            
            <!-- Complaint Details -->
            <Label text="Complaint Details *" styleClass="input-label" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextArea fx:id="complaintDetails" promptText="Please describe your issue in detail..." 
                      styleClass="modern-input" prefRowCount="5"
                      GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            
            <!-- Desired Resolution -->
            <Label text="Desired Resolution *" styleClass="input-label" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <ComboBox fx:id="resolutionCombo" styleClass="modern-input" GridPane.rowIndex="3" GridPane.columnIndex="1">
                <placeholder>
                    <Label text="What would you like us to do?"/>
                </placeholder>
            </ComboBox>
            
            <!-- Contact Preference -->
            <Label text="Contact Preference" styleClass="input-label" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <HBox spacing="20" GridPane.rowIndex="4" GridPane.columnIndex="1">
                <CheckBox fx:id="contactEmail" text="Email" selected="true" styleClass="modern-checkbox"/>
                <CheckBox fx:id="contactPhone" text="Phone" styleClass="modern-checkbox"/>
            </HBox>
        </GridPane>
        
        <!-- Action Buttons -->
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="backButton" text="Back to Orders" onAction="#handleBack" styleClass="secondary-button">
                <graphic>
                    <FontIcon iconLiteral="fas-arrow-left" iconSize="14"/>
                </graphic>
            </Button>
            <Button fx:id="submitButton" text="Submit Complaint" onAction="#handleSubmit" styleClass="primary-button">
                <graphic>
                    <FontIcon iconLiteral="fas-paper-plane" iconSize="14"/>
                </graphic>
            </Button>
        </HBox>
    </VBox>
    
    <!-- Footer -->
    <Label text="Â© 2025 Lilach Flower Shop" styleClass="copyright"/>
    </VBox>
</VBox>